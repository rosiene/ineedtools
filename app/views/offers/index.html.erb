<p id="notice"><%= notice %></p>

<h2>Listing Offers</h2>

<table class="table">
  <thead>
    <tr>
      <th>Name</th>
      <th>Description</th>
      <th>Price</th>
      <th>Category</th>
      <th>Status</th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @offers.each do |offer| %>
      <tr>
        <td><%= offer.name %></td>
        <td><%= offer.description %></td>
        <td><%= offer.price %></td>
        <td><%= offer.category.name %></td>
        <td><%= offer.status %></td>
        <td>
          <%= link_to '[Show]', offer %>
          <%= link_to '[Edit]', edit_offer_path(offer) %>
          <%= link_to '[Destroy]', offer, method: :delete, data: { confirm: 'Are you sure?' } %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Offer', new_offer_path %>
