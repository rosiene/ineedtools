<div class="panel panel-default">
  <div class="panel-heading">
    <h3>Rent</h3>
  </div>
  <div class="panel-body">
    <%= form_for(@rent) do |f| %>
      <%= f.hidden_field :offer_id %>
      <% if @rent.errors.any? %>
        <div id="error_explanation">
          <h2><%= pluralize(@rent.errors.count, "error") %> prohibited this rent from being saved:</h2>

          <ul>
